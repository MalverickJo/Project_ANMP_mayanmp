<!-- item_card_budget.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginBottom="12dp"
    card_view:cardBackgroundColor="@android:color/holo_green_light"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"> <!-- abu terang -->

    <LinearLayout
        android:id="@+id/selectedBudget"
        android:layout_width="403dp"
        android:layout_height="83dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvBudgetName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Makanan"
            android:textColor="#263238"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvBudgetNominal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IDR 200.000"
            android:textColor="#37474F"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
